
---
--- 
    <!-- Hero Section -->
    <section id="hero" class="hero section">
      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row align-items-center">
          <div class="col-lg-6" data-aos="fade-right" data-aos-delay="200">
            <h1 class="hero-title">Space Impact Forum 2026</h1>
            <p class="hero-subtitle">Advancing Sustainability & Innovation in Space</p>
            <p class="hero-description">
              Connect with thought leaders, space innovators, policymakers, and industry pioneers for three days of deep-dive discussions, collaborative workshops, and actionable insights that will define the future of responsible space development.
            </p>

            <div class="event-details mb-4">
              <div class="detail-item" data-aos="fade-up" data-aos-delay="300">
                <i class="bi bi-calendar-event"></i>
                <span>September 14-16, 2026</span>
              </div>
              <div class="detail-item" data-aos="fade-up" data-aos-delay="350">
                <i class="bi bi-geo-alt"></i>
                <span>Leicester, UK</span>
              </div>
              <div class="detail-item" data-aos="fade-up" data-aos-delay="400">
                <i class="bi bi-people"></i>
                <span>200+ Experts & Attendees</span>
              </div>
            </div>

            <div class="hero-actions" data-aos="fade-up" data-aos-delay="450">
              <a href="buy-tickets" class="btn btn-primary btn-lg me-3">Register Now</a>
              <a href="schedule" class="btn btn-outline-primary btn-lg">View Schedule</a>
            </div>

            <div class="countdown-wrapper mt-4" data-aos="fade-up" data-aos-delay="500">
              <h5 class="countdown-title">Event Starts In:</h5>
              <div class="countdown d-flex justify-content-start" data-count="2026/09/14">
                <div>
                  <h3 class="count-days"></h3>
                  <h4>Days</h4>
                </div>
                <div>
                  <h3 class="count-hours"></h3>
                  <h4>Hours</h4>
                </div>
                <div>
                  <h3 class="count-minutes"></h3>
                  <h4>Minutes</h4>
                </div>
                <div>
                  <h3 class="count-seconds"></h3>
                  <h4>Seconds</h4>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-6" data-aos="fade-left" data-aos-delay="300">
            <div class="hero-image-wrapper">
              <img src="/img/spaceimpact-logo.png" alt="Space Impact Forum Logo" class="img-fluid">
              <div class="floating-badges">
                <div class="badge-item" data-aos="zoom-in" data-aos-delay="600">
                  <i class="bi bi-award"></i>
                  <span>World-Class Speakers</span>
                </div>
                <div class="badge-item" data-aos="zoom-in" data-aos-delay="650">
                  <i class="bi bi-wifi"></i>
                  <span>Live Streaming</span>
                </div>
                <div class="badge-item" data-aos="zoom-in" data-aos-delay="700">
                  <i class="bi bi-people"></i>
                  <span>Networking & Collaboration</span>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section><!-- /Hero Section -->
