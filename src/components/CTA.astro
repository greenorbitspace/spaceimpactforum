---
/* CTA section component */
---
    <!-- Call To Action Section -->
    <section id="call-to-action" class="call-to-action section light-background">

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h2>Ready to Transform Your Event Experience?</h2>
            <p class="lead">Join thousands of forward-thinking professionals at the most innovative tech conference of the year. Discover cutting-edge solutions, network with industry leaders, and accelerate your career.</p>
          </div>
        </div>

        <div class="row justify-content-center mt-5" data-aos="zoom-in" data-aos-delay="200">
          <div class="col-lg-10">
            <div class="cta-card">
              <div class="row align-items-center g-4">

                <div class="col-lg-6">
                  <div class="cta-content">
                    <div class="stats-grid mb-4">
                      <div class="stat-item">
                        <span class="stat-number" data-purecounter-start="0" data-purecounter-end="2500" data-purecounter-duration="2">2500</span>
                        <span class="stat-label">Attendees</span>
                      </div>
                      <div class="stat-item">
                        <span class="stat-number" data-purecounter-start="0" data-purecounter-end="75" data-purecounter-duration="2">75</span>
                        <span class="stat-label">Speakers</span>
                      </div>
                      <div class="stat-item">
                        <span class="stat-number" data-purecounter-start="0" data-purecounter-end="3" data-purecounter-duration="2">3</span>
                        <span class="stat-label">Days</span>
                      </div>
                      <div class="stat-item">
                        <span class="stat-number" data-purecounter-start="0" data-purecounter-end="25" data-purecounter-duration="2">25</span>
                        <span class="stat-label">Tracks</span>
                      </div>
                    </div>

                    <h3>Don't Miss Out on the Future</h3>
                    <p>Early bird pricing ends in 5 days. Secure your spot now and save up to 40% on regular ticket prices.</p>

                    <div class="cta-buttons">
                      <a href="#" class="btn btn-primary">Get Your Tickets</a>
                      <a href="#" class="btn btn-outline">View Agenda</a>
                    </div>

                    <div class="trust-indicators mt-4">
                      <div class="trust-item">
                        <i class="bi bi-shield-check"></i>
                        <span>Money-back guarantee</span>
                      </div>
                      <div class="trust-item">
                        <i class="bi bi-lightning"></i>
                        <span>Instant confirmation</span>
                      </div>
                      <div class="trust-item">
                        <i class="bi bi-calendar-event"></i>
                        <span>Flexible cancellation</span>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-lg-6">
                  <div class="cta-visual">
                    <div class="image-stack">
                      <img src="assets/img/events/showcase-8.webp" alt="Event showcase" class="main-image img-fluid" loading="lazy">
                      <div class="floating-card card-1" data-aos="fade-up" data-aos-delay="300">
                        <div class="card-content">
                          <i class="bi bi-people-fill"></i>
                          <div>
                            <span class="card-number">89%</span>
                            <span class="card-text">Would attend again</span>
                          </div>
                        </div>
                      </div>
                      <div class="floating-card card-2" data-aos="fade-up" data-aos-delay="400">
                        <div class="card-content">
                          <i class="bi bi-star-fill"></i>
                          <div>
                            <span class="card-number">4.9/5</span>
                            <span class="card-text">Average rating</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center mt-5" data-aos="fade-up" data-aos-delay="300">
          <div class="col-lg-8">
            <div class="urgency-bar">
              <div class="urgency-content">
                <i class="bi bi-clock-fill"></i>
                <span class="urgency-text">Limited time offer - Early bird pricing ends soon!</span>
                <div class="countdown d-flex" data-count="2026/01/15">
                  <div>
                    <span class="count-days">00</span>
                    <small>Days</small>
                  </div>
                  <div>
                    <span class="count-hours">00</span>
                    <small>Hours</small>
                  </div>
                  <div>
                    <span class="count-minutes">00</span>
                    <small>Min</small>
                  </div>
                  <div>
                    <span class="count-seconds">00</span>
                    <small>Sec</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </section><!-- /Call To Action Section -->