---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <main class="main">

<!-- Page Title -->
<div class="page-title">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="heading-title">Our Supporters</h1>
          <p class="mb-0">
            The Space Impact Forum thrives thanks to the contributions of our supporters.  
            From local partners to global collaborators, they enable Labs, research, and community engagement that drive measurable impact across Food, Energy, Environment, and Urban systems.
          </p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="index">Home</a></li>
        <li class="current">Supporters</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Lead Supporters -->
<section id="lead-supporters" class="section py-5">
  <div class="container" data-aos="fade-up">
    <div class="row text-center mb-5">
      <div class="col-12">
        <h2 class="mb-3">Lead Supporters</h2>
        <p class="mb-4">Key contributors helping shape the Forum’s mission and initiatives.</p>
      </div>
    </div>
    <div class="row g-4 justify-content-center align-items-center">
      <div class="col-md-3 col-6">
        <img src="assets/images/supporters/logo-lead1.png" alt="Lead Supporter 1" class="img-fluid">
      </div>
      <div class="col-md-3 col-6">
        <img src="assets/images/supporters/logo-lead2.png" alt="Lead Supporter 2" class="img-fluid">
      </div>
      <div class="col-md-3 col-6">
        <img src="assets/images/supporters/logo-lead3.png" alt="Lead Supporter 3" class="img-fluid">
      </div>
    </div>
  </div>
</section>

<!-- Major Supporters -->
<section id="major-supporters" class="section bg-light py-5">
  <div class="container" data-aos="fade-up">
    <div class="row text-center mb-5">
      <div class="col-12">
        <h2 class="mb-3">Major Supporters</h2>
        <p class="mb-4">Partners supporting Labs, workshops, and research initiatives across multiple domains.</p>
      </div>
    </div>
    <div class="row g-4 justify-content-center align-items-center">
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-major1.png" alt="Major Supporter 1" class="img-fluid">
      </div>
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-major2.png" alt="Major Supporter 2" class="img-fluid">
      </div>
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-major3.png" alt="Major Supporter 3" class="img-fluid">
      </div>
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-major4.png" alt="Major Supporter 4" class="img-fluid">
      </div>
    </div>
  </div>
</section>

<!-- Community & Local Supporters -->
<section id="community-supporters" class="section py-5">
  <div class="container" data-aos="fade-up">
    <div class="row text-center mb-5">
      <div class="col-12">
        <h2 class="mb-3">Community & Local Supporters</h2>
        <p class="mb-4">Local and grassroots organisations supporting the Forum’s labs, outreach, and events.</p>
      </div>
    </div>
    <div class="row g-4 justify-content-center align-items-center">
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-community1.png" alt="Community Supporter 1" class="img-fluid">
      </div>
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-community2.png" alt="Community Supporter 2" class="img-fluid">
      </div>
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-community3.png" alt="Community Supporter 3" class="img-fluid">
      </div>
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-community4.png" alt="Community Supporter 4" class="img-fluid">
      </div>
      <div class="col-md-2 col-4">
        <img src="assets/images/supporters/logo-community5.png" alt="Community Supporter 5" class="img-fluid">
      </div>
    </div>
  </div>
</section>

<!-- Lab-Specific Supporters -->
<section id="lab-supporters" class="section bg-light py-5">
  <div class="container" data-aos="fade-up">
    <div class="row text-center mb-5">
      <div class="col-12">
        <h2 class="mb-3">Lab-Specific Supporters</h2>
        <p class="mb-4">Supporters contributing to individual Labs and targeted impact initiatives.</p>
      </div>
    </div>

    <div class="row g-4 text-center">
      <div class="col-md-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Food Impact Lab</h5>
            <img src="assets/images/supporters/logo-foodlab.png" alt="Food Lab Supporter" class="img-fluid mt-3">
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Energy Impact Lab</h5>
            <img src="assets/images/supporters/logo-energylab.png" alt="Energy Lab Supporter" class="img-fluid mt-3">
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Environment Impact Lab</h5>
            <img src="assets/images/supporters/logo-environmentlab.png" alt="Environment Lab Supporter" class="img-fluid mt-3">
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Urban Impact Lab</h5>
            <img src="assets/images/supporters/logo-urbanlab.png" alt="Urban Lab Supporter" class="img-fluid mt-3">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section id="cta" class="section py-5 text-center">
  <div class="container" data-aos="fade-up">
    <h2 class="mb-3">Join Our Supporter Network</h2>
    <p class="mb-4">Support measurable impact and innovation. Collaborate as a community partner, technical supporter, contributor, or observer.</p>
    <a href="contact" class="btn btn-primary btn-lg">Become a Supporter</a>
  </div>
</section>

  </main>

</Layout>